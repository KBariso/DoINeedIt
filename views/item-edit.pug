extends layout.pug

block content
    form(action=`wishlists/${wishListId}/items/edit/${item.id}`, method="post")
      input(type="hidden" name="_csrf" value=csrfToken)
      label(for="name") Name
      input(type="text", name="name" value=name)
      label(for="categoryId") Category
      select(name="categoryId" required=true)
        option(selected="true" disabled="disabled") --Select a category--
        each category in categories
          option(value=category.id)= category.name
      label(for="price") Price
      input(type="number", name="price" value=price)
      label(for="link") Link
      input(type="url", name="link" value=link)
      label(for="purchased") Purchased
      input(type="checkbox", name="purchased" value="purchased")
      button(type="submit") Save changes
      a(href=`/items/${item.id}`) Cancel
    form(method='post' action=`/items/${item.id}/delete`)
      button(type='submit') Delete item
    if errors
      ul(class='error-list')
        each error in errors
          li= error
