doctype html
html
  head
      block head
        title Do I Need It | #{title}
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel="stylesheet", href='/stylesheets/forms.css')
        link(rel="stylesheet", href='/stylesheets/wishlist.css')
        script(src="https://kit.fontawesome.com/e256f260b2.js" crossorigin="anonymous")

  body
    nav(class='nav-bar')
      div(class='nav-left')
        a(href='/' id='home' class='nav-button') Do I Need It?
      div(class='nav-right')
        if authenticated
          p(class='welcome') Welcome, #{user.fullName}!
          form(method='post' action='/users/logout')
            button(type='submit' class='nav-button') Logout
        else
          a(href='/users/login' class='nav-button') Log In
          a(href='/users/signup' class='nav-button') Sign Up for FREE


    block content
